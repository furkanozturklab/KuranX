                            <RadioButton x:Name="readCheck" x:Uid="Okuduklarım" Tag="Read" Style="{DynamicResource ResourceKey=ayetlerPageItemNavButton}" Click="checkstatustype_click" IsEnabled="True" />
                            <RadioButton x:Name="noraedCheck" x:Uid="Okumadıklarım" Tag="NoRead" Style="{DynamicResource ResourceKey=ayetlerPageItemNavButton}" Click="checkstatustype_click" IsEnabled="True" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                            <StackPanel Margin="0,0,25,0">
                                <TextBlock Text="İndiği Yer" Style="{DynamicResource ResourceKey=ayetlerNavComboboxHeaderText}" />
                                <ComboBox x:Name="landingCombobox" Margin="0 5 0 0" Style="{DynamicResource ResourceKey=ayetlerNavCombobox}" SelectedIndex="0" SelectionChanged="landingCombobox_SelectionChanged">
                                    <ComboBoxItem Style="{DynamicResource ResourceKey=ayetlerNavComboboxItems}" Content="Hepsi" Name="Hepsi" />
                                    <ComboBoxItem Style="{DynamicResource ResourceKey=ayetlerNavComboboxItems}" Content="Mekke" Name="Mekke" />
                                    <ComboBoxItem Style="{DynamicResource ResourceKey=ayetlerNavComboboxItems}" Content="Medine" Name="Medine" />
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Margin="0,0,25,0">
                                <TextBlock Text="Okuma Sırası" Style="{DynamicResource ResourceKey=ayetlerNavComboboxHeaderText}" />
                                <ComboBox x:Name="deskingCombobox" Margin="0 5 0 0" Style="{DynamicResource ResourceKey=ayetlerNavCombobox}" SelectedIndex="0" SelectionChanged="deskingCombobox_SelectionChanged">
                                    <ComboBoxItem Style="{DynamicResource ResourceKey=ayetlerNavComboboxItems}" Content="İnişe Göre" />
                                    <ComboBoxItem Style="{DynamicResource ResourceKey=ayetlerNavComboboxItems}" Content="Mushafa Göre" />
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
