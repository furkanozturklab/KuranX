                                                            <TextBlock Text=" Ayet" Style="{DynamicResource versescounttext}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Button Style="{DynamicResource ayetItemsButton}" Grid.Column="1"  Tag="{Binding versesId}" Click="versesPageOpen" />
                                                </Grid>
                                            </StackPanel>
