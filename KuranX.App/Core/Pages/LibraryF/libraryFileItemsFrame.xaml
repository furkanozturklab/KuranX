      d:DesignHeight="708" d:DesignWidth="1115" d:MaxHeight="708" d:MaxWidth="1270" d:MinWidth="1115"
      Title="LibraryFileFrame" Background="#FAFAFA" Loaded="Page_Loaded">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="230" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <Grid x:Name="loadinGifContent"  Grid.Row="0" Grid.RowSpan="3" Background="#FAFAFA" Panel.ZIndex="7" Visibility="Visible">
            <Image gif:ImageBehavior.AnimatedSource="/Resource/Images/Gif/Spinner800.gif" Width="250" Height="250"  RenderOptions.BitmapScalingMode="HighQuality" />
        </Grid>

        <Popup x:Name="fileUpPopup" IsOpen="False" Placement="Center" AllowsTransparency="True" Width="460" Height="140" VerticalAlignment="Center" HorizontalAlignment="Center" PopupAnimation="Fade">
            <Border Style="{DynamicResource defaultBorderShadowEffect}" Width="440" Height="120">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition Height="85" />
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="filepopupHeaderTxt" Text="Dosya Yükleniyor" Grid.Row="0"  Foreground="#1C1E2F" FontFamily="{DynamicResource PoppinsMedium}" FontSize="16" TextAlignment="Center" Margin="0 5 0 5" />
                    <Grid Margin="20 10 20 10" Grid.Row="1" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="26" />
                        </Grid.ColumnDefinitions>

                        <Icon:PackIconBootstrapIcons Grid.Column="0" VerticalAlignment="Center" Kind="FileEarmarkPdf" Foreground="#B30B00" Width="36" Height="36" />
                        <StackPanel Orientation="Vertical" Grid.Column="1">
                            <TextBlock x:Name="fileNameTxt" Text="" Margin="5 5 5 0" FontSize="14" Foreground="#1C1E2F" FontFamily="{DynamicResource PoppinsMedium}" />
                            <TextBlock x:Name="fileSizeTxt" Text="" Margin="5 0 5 0" FontSize="10" Foreground="#7B7B7B" FontFamily="{DynamicResource PoppinsMedium}" />
                            <ProgressBar x:Name="fileuploadtrackprogress" Height="10"  Margin="5" Style="{DynamicResource progressBarTemp}" Value="0" ValueChanged="fileuploadtrackprogress_ValueChanged" />
                        </StackPanel>
                        <!-- CheckCircleFill #23d160 -->
                        <Button x:Name="fileuploadIcontrack" Grid.Column="2" Width="16" Height="16"  Style="{DynamicResource loadFileIcon}" Uid="#0D6EFD" Tag="ArrowRightCircle" />
                    </Grid>
                </Grid>
            </Border>
        </Popup>

        <Popup x:Name="fileDeletePopup" IsOpen="False" Placement="Center" AllowsTransparency="True" Width="300" Height="190" VerticalAlignment="Center" HorizontalAlignment="Center" PopupAnimation="Fade">
            <Border Style="{DynamicResource defaultBorderShadowEffect}" Width="280" Height="170">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="120" />
                    </Grid.RowDefinitions>
                    <Border  Grid.Row="0" Style="{DynamicResource headerBorderTemp}">
                        <TextBlock Text="Dosya Silme" Style="{DynamicResource popupHeaderText}" />
                    </Border>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="280" Grid.Row="0">
                            <TextBlock TextWrapping="Wrap" Text="Yüklemiş olduğunuz dosya silinecek onaylıyormusunuz" TextAlignment="Center" FontFamily="{DynamicResource PoppinsMedium}" FontSize="14" Foreground="#1C1E2F" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </StackPanel>
                        <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0">
                                <Button x:Name="resetVersePopupBtn" Style="{DynamicResource popupDefaultButtonRest}" Tag="Trash" Content="Sil" HorizontalAlignment="Center" Click="resetFileBtn_Click" />
                                <Button  Style="{DynamicResource popupDefaultButtonClosed}" Tag="CloseBig" Content="Vazgeç" Uid="fileDeletePopup" HorizontalAlignment="Center" Click="popupClosed_Click" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Popup>

        <Popup x:Name="alph" IsOpen="False" Placement="Center" AllowsTransparency="True" Width="460" Height="200" VerticalAlignment="Center" HorizontalAlignment="Center" PopupAnimation="Fade">
            <Border  Style="{DynamicResource defaultBorderShadowEffect}" Width="440" Height="180">
