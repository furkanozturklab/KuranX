                                    <Button x:Name="deleteSectionButton" Style="{DynamicResource pp_DefaultButtonBstrp}" Tag="Trash" Content="Sil" HorizontalAlignment="Center"  Margin="10 20" Click="deleteSectionButton_Click" />

                                </StackPanel>


                            </StackPanel>


