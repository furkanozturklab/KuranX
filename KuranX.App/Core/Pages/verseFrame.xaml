                                <Button Style="{DynamicResource popupDefaultButtonClosed}" Tag="CloseBig" Content="Kapat" Uid="descVersePopup" HorizontalAlignment="Center" Click="popupClosed_Click" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Popup>

