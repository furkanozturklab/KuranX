    <Style x:Key="pp_searchResultText" TargetType="TextBlock">

        <Setter Property="FontFamily" Value="{DynamicResource PoppinsRegular}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="#1C1E2F" />
